<Window x:Class="AtividadeLinqVeiculo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AtividadeLinqVeiculo"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Menu Height="25" VerticalAlignment="Top">
            <MenuItem Header="Cadastros" >
                
                <MenuItem Header="Fabricantes... " Click="CadFabricantesClick" />
                
                <MenuItem Header="Veículos..." Click="CadVeiculosClick"/>
                
                <Separator/>
                
                <MenuItem Header="Sair" Click="SairClick"/>
                
            </MenuItem>
            
            <MenuItem Header="Consultas">
                
                <MenuItem Header="Veículos Disponíveis..." Click="ConsVeiculosClick"/>
                
            </MenuItem>
        </Menu>
    </Grid>
</Window>
